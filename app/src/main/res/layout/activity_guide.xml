<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cashing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.polux.activities.recaudaciones.GuideActivity">



    <include layout="@layout/util_progress" />

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="GuÃ­a #"
                android:textColor="@color/colorLabel"
                android:textSize="@dimen/content" />

            <TextView
                android:id="@+id/tv_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="@dimen/content" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Fecha"
                android:textColor="@color/colorLabel"
                android:textSize="@dimen/contentMin" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="@dimen/contentMin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Total a recaudar"
                android:textColor="@color/colorLabel"
                android:textSize="@dimen/contentMin" />

            <TextView
                android:id="@+id/tv_total_rc"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="@dimen/contentMin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Total recaudado"
                android:textColor="@color/colorLabel"
                android:textSize="@dimen/contentMin" />

            <TextView
                android:id="@+id/tv_total_recaudado"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="@dimen/contentMin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Pendiente"
                android:textColor="@color/colorLabel"
                android:textSize="@dimen/contentMin" />

            <TextView
                android:id="@+id/tv_total_pendiente"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="@dimen/contentMin" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_below="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nombre del cliente"
            android:padding="11dp"
            android:background="@drawable/radius_background"
            android:id="@+id/et_search"
            android:layout_weight="1" />

        <Button
            android:minWidth="53dp"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginTop="-3dp"
            android:backgroundTint="@color/colorWhite"
            android:drawableLeft="@drawable/ic_search_light"
            android:id="@+id/btn_search" />

    </LinearLayout>

    <View
        android:layout_below="@+id/ll_search"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:id="@+id/lv_cashing" />

</RelativeLayout>
