<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/item_vertical_margin"
    android:paddingLeft="@dimen/item_horizontal_margin"
    android:paddingRight="@dimen/item_horizontal_margin"
    android:paddingTop="@dimen/item_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10px">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="Atun real"
            android:textColor="#3b3b3b"
            android:textSize="17dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10px">

        <TextView
            android:id="@+id/tv_lv_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="0.7"
            android:text="cÃ³digo"
            android:textSize="13dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="right"
            android:text="44C7"
            android:layout_weight="0.5"
            android:textColor="#3b3b3b"
            android:textSize="13dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_lb_stock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="0.8"
            android:text="stock"
            android:textSize="13dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_stock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="12dp"
            android:gravity="right"
            android:text="11440"
            android:layout_weight="0.7"
            android:textColor="#3b3b3b"
            android:textSize="13dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:id="@+id/tv_lb_price"
            android:text="precio unit. $"
            android:layout_weight="1.2"
            android:textSize="13dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="1,55"
            android:layout_weight="0.7"
            android:textColor="#3b3b3b"
            android:textSize="13dp"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>