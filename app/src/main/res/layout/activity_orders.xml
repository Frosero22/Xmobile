<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_orders"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"

    tools:context="com.mobile.polux.activities.OrdersActivity">

    <LinearLayout
        android:id="@+id/ly_info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:text="Pedidos realizados en el dÃ­a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/title"
            android:textSize="@dimen/title"
            android:id="@+id/textView2" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ly_info"
        android:id="@+id/ll_info_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1.5"
                android:text="Total de pedidos"
                android:textColor="@color/colorLabel"
                android:textSize="@dimen/content" />

            <TextView
                android:id="@+id/tv_total_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="@dimen/content" />


            <TextView
                android:id="@+id/tv_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="$ 0"
                android:textColor="@color/colorText"
                android:textSize="@dimen/content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1.5"
                android:text="Pedidos aprobados"
                android:textColor="@color/colorLabel"
                android:textSize="@dimen/content" />

            <TextView
                android:id="@+id/tv_approved_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="@dimen/content" />

            <TextView
                android:id="@+id/tv_approved"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="$ 0"
                android:textColor="@color/colorText"
                android:textSize="@dimen/content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1.5"
                android:text="Pedidos retenidos"
                android:textColor="@color/colorLabel"
                android:textSize="@dimen/content" />

            <TextView
                android:id="@+id/tv_retained_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="@dimen/content" />

            <TextView
                android:id="@+id/tv_retained"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="$ 0"
                android:textColor="@color/colorText"
                android:textSize="@dimen/content" />

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_below="@+id/ll_info_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:id="@+id/lv_orders" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:backgroundTint="@color/colorPrimary"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/ic_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="17dp"
        android:id="@+id/fb_new_order"
        android:layout_marginRight="18dp"
        android:layout_alignParentRight="true" />

    <include layout="@layout/util_progress" />

</RelativeLayout>
