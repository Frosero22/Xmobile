<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/tv_m_final"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="¿Está seguro de que desea enviar esta guía?"
        android:textColor="@color/colorLabel"
        android:padding="10dp"
        android:textSize="@dimen/content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="#fff"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Cant. de Clientes"
            android:textColor="@color/colorLabel"
            android:textSize="@dimen/content" />

        <TextView
            android:id="@+id/tv_cant"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="0"
            android:textColor="@color/colorText"
            android:textSize="@dimen/content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Cant. Facturas"
            android:textColor="@color/colorLabel"
            android:textSize="@dimen/content" />

        <TextView
            android:id="@+id/tv_cant_invoice"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="0"
            android:textColor="@color/colorText"
            android:textSize="@dimen/content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Total a recaudar"
            android:textColor="@color/colorLabel"
            android:textSize="@dimen/content" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="0"
            android:textColor="@color/colorText"
            android:textSize="@dimen/content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Cant. Clientes pendientes recaudar"
            android:textColor="@color/colorLabel"
            android:textSize="@dimen/content" />

        <TextView
            android:id="@+id/tv_pending"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="0"
            android:textColor="@color/colorText"
            android:textSize="@dimen/content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_total_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Total recaudado"
            android:textColor="@color/colorLabel"
            android:textSize="@dimen/content" />

        <TextView
            android:id="@+id/tv_total_c"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="0"
            android:textColor="@color/colorText"
            android:textSize="@dimen/content" />

    </LinearLayout>

</LinearLayout>