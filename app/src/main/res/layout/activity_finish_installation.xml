<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/content"
    tools:context="com.mobile.polux.activities.LoginActivity">

    <ProgressBar
        android:id="@+id/finish_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        android:visibility="gone" />


    <!-- Login progress -->
    <ScrollView
        android:id="@+id/finish_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="95dp"
                android:src="@drawable/xmobilered"/>

            <TextView
                android:layout_marginTop="28dp"
                android:text="Para finalizar la instalaciÃ³n ingresa el RUC de la empresa en la cual trabajas"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="210dp"
                android:textSize="@dimen/content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/icon_main_width"
                android:layout_height="@dimen/icon_main_width"
                android:layout_gravity="center" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:minHeight="55dp"
                android:paddingLeft="@dimen/et_padding_left"
                android:paddingRight="@dimen/et_padding_right"
                android:paddingTop="@dimen/et_padding_top">

                <EditText
                    android:id="@+id/et_ruc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ruc"
                    android:inputType="number"
                    android:background="@drawable/et_login"
                    android:maxLines="1"
                    android:ems="10"
                    android:layout_marginTop="8dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>



            <Button
                android:id="@+id/bt_finalize"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/btn_b_icon"
                android:textColor="#FFF"
                android:text="@string/action_finish_install"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>


    <!--android:background="@drawable/bimgpc"-->

</RelativeLayout>
