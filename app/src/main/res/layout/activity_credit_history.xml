                    android:layout_marginLeft="7dp"
                    android:textSize="@dimen/valuesX" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="@dimen/space_line"
                    android:layout_marginTop="@dimen/space_line"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Deuda por Vencer"
                    android:textColor="#000"
                    android:textSize="@dimen/labelX" />

                <TextView
                    android:id="@+id/tv_due_pv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textSize="@dimen/valuesX" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="@dimen/space_line"
                    android:layout_marginTop="@dimen/space_line"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Deuda Vencida"
                    android:textColor="#000"
                    android:textSize="@dimen/labelX" />

                <TextView
                    android:id="@+id/tv_due_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textSize="@dimen/valuesX" />

            </LinearLayout>


    </ScrollView>

</LinearLayout>